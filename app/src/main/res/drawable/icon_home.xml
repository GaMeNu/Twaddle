<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/icon_home_checked"
        android:drawable="@drawable/baseline_home" android:state_checked="true"/>
    <item android:id="@+id/icon_home_default"
        android:drawable="@drawable/outline_home"/>

    <transition
        android:fromId="@id/icon_home_default"
        android:toId="@id/icon_home_checked">
        <animation-list android:oneshot="true">

        </animation-list>
    </transition>

</animated-selector>