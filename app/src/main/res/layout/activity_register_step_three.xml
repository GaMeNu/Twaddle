<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_d"
    tools:context=".activities.RegisterStepThreeActivity">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:id="@+id/btn_register_confirmNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_light"
            android:text="You're almost there,"
            android:textAlignment="center"
            android:textColor="@color/secondary_var_d"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_bold"
            android:text="just one more step."
            android:textAlignment="center"
            android:textColor="@color/primary_var_d"
            android:textSize="35sp" />
    </LinearLayout>

    <TextView
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:background="@drawable/infobox_background"
        android:fontFamily="@font/outfit_regular"
        android:text="The Display Name is for the world to see, and the Handle will be used for people to find you. Both are public info!"
        android:textColor="@color/text_d"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/et_register_displayName"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:ems="10"
            android:inputType="text"
            android:hint="Display Name"
            android:textColorHint="@color/text_secondary_d"
            android:background="@drawable/et_background"
            android:fontFamily="@font/outfit_light"
            android:textSize="24sp"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10sp"/>

        <EditText
            android:id="@+id/et_register_tag"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@drawable/et_background"
            android:digits="abcdefghijklmnopqrstuvwxyz0123456789._"
            android:ems="10"
            android:fontFamily="@font/outfit_light"
            android:hint="Unique Tag"
            android:inputType="text"
            android:textColorHint="@color/text_secondary_d"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
        android:background="@drawable/tv_error_background"
        android:visibility="invisible">
        <TextView
            android:id="@+id/tv_errTitle_registerNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_bold"
            android:text="ErrorTitle:"
            android:textColor="@color/text_d"/>
        <TextView
            android:id="@+id/tv_errDesc_registerNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/outfit_regular"
            android:text="Error Description goes here"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
        app:layout_constraintVertical_bias="0.75">

        <Button
            android:id="@+id/btn_register_namesConfirm"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="Confirm"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>