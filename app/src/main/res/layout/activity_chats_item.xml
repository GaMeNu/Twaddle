<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/chatsItem_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chatsItem_constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp">

            <ImageView
                android:id="@+id/chatItem_profilePic"
                android:layout_width="64sp"
                android:layout_height="64sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_person" />

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chatItem_profilePic"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/chatItem_displayname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0sp"
                        android:layout_marginTop="0sp"
                        android:layout_weight="1"
                        android:fadingEdge="horizontal"
                        android:fontFamily="@font/outfit_regular"
                        android:text="Username"
                        android:textSize="20sp" />

                    <Space
                        android:layout_width="2dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/chatItem_msgTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="00:00 AM"
                        android:textAlignment="textEnd"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/chatItem_msgPreview"
                        android:layout_width="150dp"
                        android:layout_height="20sp"
                        android:layout_weight="1"
                        android:fadingEdge="horizontal|vertical"
                        android:fadingEdgeLength="50sp"
                        android:text="LastMessageSentGoesHereSoThisIsAPlaceHolder"
                        android:textSize="16sp" />

                    <Space
                        android:layout_width="2dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/chatItem_unreadBubble"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/notification_number_bubble"
                        android:fontFamily="@font/outfit_bold"
                        android:gravity="center"
                        android:text="99+"
                        android:textAlignment="gravity"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>