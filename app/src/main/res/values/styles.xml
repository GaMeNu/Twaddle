<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.Primary" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/primary_d</item>
        <item name="android:backgroundTint">@color/primary_d</item>
        <item name="backgroundTint">@color/primary_d</item>
        <item name="color">@color/primary_d</item>
        <item name="android:textColor">@color/text_d</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="background">@drawable/button_background</item>
        <item name="fontFamily">@font/outfit_regular</item>
    </style>
    <style name="Button.Secondary" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/secondary_d</item>
        <item name="android:backgroundTint">@color/secondary_d</item>
        <item name="backgroundTint">@color/secondary_d</item>
        <item name="color">@color/secondary_d</item>
        <item name="android:textColor">@color/text_d</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="background">@drawable/button_background</item>
        <item name="fontFamily">@font/outfit_light</item>
    </style>
    <style name="Button.Tertiary" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/background_d</item>
        <item name="android:backgroundTint">@color/background_d</item>
        <item name="backgroundTint">@color/background_d</item>
        <item name="color">@color/background_d</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="background">@drawable/button_background</item>
        <item name="android:textColor">@color/text_d</item>
        <item name="fontFamily">@font/outfit_light</item>
    </style>
    
    <style name="EditText.Input" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:colorBackground">@color/background_d</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:textColorHint">@color/text_secondary_d</item>
        <item name="hintTextColor">@color/text_secondary_d</item>
        <item name="android:textColor">@color/text_d</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BottomNavigationView.NavBar" parent="Widget.Design.BottomNavigationView">
