<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Twaddle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_d</item>
        <item name="colorPrimaryVariant">@color/primary_var_d</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_d</item>
        <item name="colorSecondaryVariant">@color/secondary_var_d</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_accent_d</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/Theme.AlertDialog</item>
        <item name="alertDialogStyle">@style/Theme.AlertDialog</item>
    </style>
    
    <style name="Theme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:dialogTheme">@style/Theme.AlertDialog</item>
        <item name="android:backgroundTint">@color/background_d</item>
        <item name="android:editTextStyle">@style/EditText.Input</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Button.Primary</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Button.Secondary</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Button.Tertiary</item>


        <item name="dialogTheme">@style/Theme.AlertDialog</item>
        <item name="backgroundTint">@color/background_d</item>
        <item name="backgroundColor">@color/background_d</item>
        <item name="fontFamily">@font/outfit_regular</item>
        <item name="editTextStyle">@style/EditText.Input</item>
        <item name="buttonBarPositiveButtonStyle">@style/Button.Primary</item>
        <item name="buttonBarNeutralButtonStyle">@style/Button.Secondary</item>
        <item name="buttonBarNegativeButtonStyle">@style/Button.Tertiary</item>
    </style>
</resources>